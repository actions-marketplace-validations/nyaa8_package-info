{
	"name": "package-version",
	"version": "1.0.0",
	"private": true,
	"description": "A GitHub Action to extract version from package.json to an environment variable",
	"main": "src/main.ts",
	"scripts": {
		"lint": "eslint src/**/*.ts",
		"format": "eslint --fix src/**/*.ts",
		"pack": "ncc build",
		"all": "npm run lint && npm run format && npm run pack"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nyaayaya/package-info.git"
	},
	"keywords": [
		"actions",
		"author",
		"description",
		"extract",
		"info",
		"json",
		"license",
		"name",
		"node",
		"package",
		"version"
	],
	"author": "nyaayaya<contrib@nyaa.science>",
	"license": "BSD-2-Clause",
	"dependencies": {
		"@actions/core": "^1.2.6",
		"@actions/glob": "^0.1.0"
	},
	"devDependencies": {
		"@types/node": "^14.0.5",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"@vercel/ncc": "^0.24.1",
		"eslint": "^7.1.0",
		"eslint-config-standard": "^14.1.1",
		"eslint-plugin-github": "^4.0.1",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"js-yaml": "^3.14.0",
		"typescript": "^3.9.3"
	}
}
